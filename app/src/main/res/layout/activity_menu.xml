<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sizeT"
        android:text="@string/text_layout"
        android:textSize="@dimen/text" />

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="@dimen/sizeB"
        android:layout_height="@dimen/sizeB"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spaceB"
        android:background="@drawable/button_background"
        android:src="@drawable/ic_camera_alt_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_t"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button1"
        android:layout_marginStart="@dimen/spaceB"
        android:text="@string/small_t1"
        android:textSize="@dimen/small_t" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="@dimen/sizeB"
        android:layout_height="@dimen/sizeB"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button1"
        android:layout_marginEnd="@dimen/spaceB"
        android:background="@drawable/button_background"
        android:src="@drawable/ic_add_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_t"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:text="@string/small_t2"
        android:textSize="@dimen/small_t" />


</RelativeLayout>